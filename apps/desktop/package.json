{
  "name": "@budget/desktop",
  "version": "0.0.0",
  "private": true,
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development node ./scripts/dev.js",
    "build": "tsc -p tsconfig.json && node ./scripts/build-copy.js",
