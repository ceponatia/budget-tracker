  "devDependencies": {
    "@types/electron": "^1.6.12",
    "@types/node": "^20.14.9",
    "cross-env": "^7.0.3",
    "electron": "^30.5.1",
    "typescript": "5.5.4",
    "vite": "^5.3.0",
    "vitest": "^1.6.1"
  }
}
